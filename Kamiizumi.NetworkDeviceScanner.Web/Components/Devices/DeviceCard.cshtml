@inherits Kamiizumi.NetworkDeviceScanner.Web.Components.Devices.DeviceCardComponent
@using Humanizer

<div class="card shadow">
    <div class="card-body">
        <h5 class="card-title mb-2 @(UserDefinedNameSet == false ? "text-muted" : string.Empty)">
            @(UserDefinedNameSet ? DeviceCardVm?.UserDefinedName : DeviceCardVm?.LastSeenHostName)
        </h5>
        <h6 class="card-subtitle mb-3 @(ProfileSet == false ? "text-muted" : string.Empty)">
            @(ProfileSet ? DeviceCardVm?.ProfileName : "No profile assigned")
        </h6>

        <div class="row device-card-details">
            <div class="col-lg-6"><i class="fas fa-clock"></i> @DeviceCardVm?.LastSeenAt.Humanize()</div>
            <div class="col-lg-6"><i class="fas fa-tag"></i> @DeviceCardVm?.LastSeenHostName</div>

            <div class="col-lg-6"><i class="fas fa-grip-horizontal"></i> @DeviceCardVm?.LastSeenIp</div>
        </div>

        @*<dl class="row mb-0">
            <dt class="col-sm-1"><i class="fas fa-clock"></i></dt>
            <dd class="col-sm-11 mb-1">@DeviceCardVm?.LastSeenAt.Humanize()</dd>

            <dt class="col-sm-1"><i class="fas fa-grip-horizontal"></i></dt>
            <dd class="col-sm-11 mb-1">@DeviceCardVm?.LastSeenIp</dd>

            <dt class="col-sm-1"><i class="fas fa-tag"></i></dt>
            <dd class="col-sm-11 mb-0">@DeviceCardVm?.LastSeenHostName</dd>
        </dl>*@
    </div>
</div>
